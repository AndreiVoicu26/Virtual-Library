{
  "ConnectionStrings": {
    "MongoDbConnection": "<mongodb-connection-string>"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/persons-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "PersonBook",
        "Args": {
          "serverUrl": "http://seq:5341",
          "MinimumLevel": "Trace"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}

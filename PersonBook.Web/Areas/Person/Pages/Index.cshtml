@page
@model IndexModel
@{
    ViewData["Title"] = "Person List";
}

<h1>Person <small class="text-muted">List</small></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="d-flex justify-content-between">
            <a class="btn btn-dark" asp-page="./Create" role="button">Create</a>
            <a class="btn btn-dark" asp-page="./Excel" role="button">Export to Excel</a>
        </div>
        @if (Model.Persons.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>                        
                        <th scope="col">First name</th>
                        <th scope="col">Last name</th>
                        <th scope="col">Date of birth</th>
                        <th scope="col">Borrowed books</th>
                        <th scope="col">Last Updated</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mi in Model.Persons)
                    {
                        <tr>
                            <td>@mi.FirstName</td>
                            <td>@mi.LastName</td>
                            <td>@mi.DateOfBirth.ToString("dd-MMM-yyyy")</td>
                            <td><a asp-page="Details" asp-route-id="@mi.Id">Books</a></td>
                            <td>@mi.LastUpdatedOn</td>
                            <td><a asp-page="Edit" asp-route-id="@mi.Id">Edit</a> | <a asp-page="Delete" asp-route-id="@mi.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.Persons.Count() persons defined.</h6>
        }
        else
        {
            <h6>Persons defined in the system will appear here.</h6>
        }
    </div>
</div>
@page "{id}"
@model DetailsModel
@{
    ViewData["Title"] = "Borrowed Book List";
}

<h1>Borrowed Books by <small class="text-muted">@Model.FirstName @Model.LastName</small></h1>

<div class="row">
    <div class="col-lg-12 ">
        @if (Model.Books.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">ISBN</th>
                        <th scope="col">Year</th>
                        <th scope="col">Last Updated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.Books)
                    {
                        <tr>
                            <td>@b.Title</td>
                            <td>@b.Author</td>
                            <td>@b.Isbn</td>
                            <td>@b.Year</td>
                            <td>@b.LastUpdated</td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.Books.Count() borrowed books.</h6>
        }
        else
        {
            <h6>Borrowed books will appear here.</h6>
        }
    </div>
</div>
<a asp-page="./Index" class="btn btn-dark">Back</a>


@page
@model CreateModel
@{
    ViewData["Title"] = "Create Person";
}

<h1>Create Person <small class="text-muted">New</small></h1>

<div class="row">
    <div class="col-lg-12">
        @if (Model.ErrorMessages.Any())
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                <div>
                    @foreach (var em in Model.ErrorMessages)
                    {
                        <text>@em</text>
                        <br />
                    }
                </div>
            </div>
        }
        <form method="post">
            <div class="mb-3">
                <label for="@Model.FirstName" class="form-label">First name</label>
                <input asp-for="FirstName" value="@Model.FirstName" class="form-control" required autocomplete="off" />
            </div>
            <div class="mb-3">
                <label for="@Model.LastName" class="form-label">Last name</label>
                <input asp-for="LastName" value="@Model.LastName" class="form-control" required autocomplete="off" />
            </div>
            <div class="mb-3">
                <label for="@Model.DateOfBirth" class="form-label">Date of birth</label>
                <input asp-for="DateOfBirth" class="form-control" required autocomplete="off" />
            </div>            
            <button type="submit" class="btn btn-dark">Create</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

<partial name="_Symbols" />
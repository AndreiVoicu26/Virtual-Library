@page
@model IndexModel
@{
    ViewData["Title"] = "Book List";
}

<h1>Book <small class="text-muted">List</small></h1>

<div class="row">
    <div class="col-lg-12 ">
        <div class="d-flex justify-content-between">
            <a class="btn btn-dark" asp-page="./Create" role="button">Create</a>
            <a class="btn btn-dark" asp-page="./Excel" role="button">Export to Excel</a>
        </div>
        @if (Model.Books.Any())
        {
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Author</th>
                        <th scope="col">ISBN</th>
                        <th scope="col">Year</th>
                        <th scope="col">Availability</th>
                        <th scope="col">Last Updated</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var b in Model.Books)
                    {
                        <tr>
                            <td>@b.Title</td>
                            <td>@b.Author</td>
                            <td>@b.Isbn</td>
                            <td>@b.Year</td>
                            @if(b.IsAvailable)
                            {
                                <td class="text-success">Available</td>
                            }
                            else
                            {
                                <td class="text-danger">Unavailable</td>
                            }

                            <td>@b.LastUpdated</td>
                            <td><a asp-page="Edit" asp-route-id="@b.Id">Edit</a> | <a asp-page="Delete" asp-route-id="@b.Id">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <h6>@Model.Books.Count() books defined</h6>
        }
        else
        {
            <h6>Books registered in the system will appear here</h6>
        }
    </div>

</div>

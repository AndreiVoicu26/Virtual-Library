@page "{id}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book <small class="text-muted">@Model.Title by @Model.Author</small></h1>
<p>Are you sure you want to delete book @Model.Title by @Model.Author?</p>
<div class="row">
    <div class="col-lg-12">
        <form method="post">
            <input type="hidden" asp-for="Title" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
